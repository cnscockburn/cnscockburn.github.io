---
import { siteConfig } from "../config";

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  tags: string[];
  slug: string;
  draft?: boolean;
  image?: string;
}

const { title, description, pubDate, tags, slug, draft, image } = Astro.props;

// Reading time (rough estimate based on description length for the card)
const formattedDate = pubDate.toLocaleDateString("en-GB", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<div class="block group relative" data-tags={tags.join(",")}>
  <div
    class={`relative bg-gray-50 dark:bg-gray-900 rounded-xl sm:rounded-2xl border border-gray-200 dark:border-gray-800 transition-all duration-300 hover:bg-white dark:hover:bg-gray-800 hover:shadow-xl hover:border-gray-300 dark:hover:border-gray-700 hover:-translate-y-1 overflow-hidden ${image ? '' : 'p-5 sm:p-6 md:p-8'}`}
  >
    {
      image && (
        <img
          src={image}
          alt=""
          class="w-full h-48 sm:h-56 object-cover"
          loading="lazy"
        />
      )
    }
    <div class={`relative ${image ? 'p-5 sm:p-6 md:p-8' : ''}`}>
    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 mb-3">
      <div class="flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400">
        <time datetime={pubDate.toISOString()}>
          {formattedDate}
        </time>
        {
          draft && (
            <span class="px-2 py-0.5 bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200 rounded text-xs font-medium">
              Draft
            </span>
          )
        }
      </div>
    </div>

    <h2
      class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-gray-100 group-hover:text-[var(--accent)] transition-colors duration-200"
      style={`--accent: ${siteConfig.accentColor}`}
    >
      <a href={`/blog/${slug}/`} class="before:absolute before:inset-0">
        {title}
      </a>
    </h2>

    <p class="mt-2 text-base sm:text-lg text-gray-600 dark:text-gray-400 leading-relaxed line-clamp-2">
      {description}
    </p>

    {
      tags.length > 0 && (
        <div class="flex flex-wrap gap-1.5 mt-4 relative z-20">
          {tags.map((tag) => (
            <a
              href={`/blog/?tag=${encodeURIComponent(tag)}`}
              class="px-2.5 py-1 bg-gray-200/60 dark:bg-gray-700/60 text-gray-600 dark:text-gray-300 rounded-md text-xs sm:text-sm font-medium hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors"
            >
              {tag}
            </a>
          ))}
        </div>
      )
    }
    <!-- Arrow icon â€” positioned relative to content area -->
    <div
      class="absolute top-5 right-5 sm:top-6 sm:right-6 w-8 h-8 sm:w-10 sm:h-10 flex items-center justify-center bg-gray-900 dark:bg-gray-100 rounded-full text-white dark:text-gray-900 transition-all duration-300 group-hover:bg-gray-700 dark:group-hover:bg-gray-300 pointer-events-none"
    >
      <svg
        class="w-3.5 h-3.5 sm:w-4 sm:h-4 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M7 17L17 7M17 7H7M17 7V17"></path>
      </svg>
    </div>
    </div>
  </div>
</div>
