---
interface Props {
  className?: string;
  items?: { label: string; href: string }[];
}

const { className = "", items = [] } = Astro.props;
---

<nav aria-label="Breadcrumb" class:list={["flex", className]}>
  <ol class="flex items-center space-x-2">
    <li>
      <a
        href="/"
        class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 transition-colors"
      >
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
          />
        </svg>
        <span class="sr-only">Home</span>
      </a>
    </li>
    
    {items.map((item, index) => (
      <li class="flex items-center">
        <svg
          class="w-4 h-4 text-gray-400 mx-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          />
        </svg>
        <a
          href={item.href}
          class:list={[
            "text-sm font-medium transition-colors",
            index === items.length - 1
              ? "text-gray-900 dark:text-gray-100 pointer-events-none"
              : "text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200"
          ]}
          aria-current={index === items.length - 1 ? "page" : undefined}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ol>
</nav>
