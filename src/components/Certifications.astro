---
import { siteConfig } from "../config";
const hasCertifications =
  siteConfig.certifications && siteConfig.certifications.length > 0;
---

{
  hasCertifications && (
    <section id="certifications" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900 dark:text-gray-100">
              Certifications
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-6">
              {siteConfig.certifications.map((cert) => (
                <div class="bg-white dark:bg-gray-900 rounded-lg shadow-sm border border-gray-100 dark:border-gray-800 p-4 sm:p-5 md:p-6 hover:shadow-md transition-shadow duration-300">
                  <div class="flex items-start gap-4">
                    <div
                      class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 rounded-full flex items-center justify-center"
                      style={`background-color: ${siteConfig.accentColor}20`}
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        style={`color: ${siteConfig.accentColor}`}
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M15 15m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                        <path d="M13 17.5v4.5l2 -1.5l2 1.5v-4.5" />
                        <path d="M10 19h-5a2 2 0 0 1 -2 -2v-10c0 -1.1 .9 -2 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-5" />
                        <path d="M6 9h12" />
                        <path d="M6 12h3" />
                        <path d="M6 15h2" />
                      </svg>
                    </div>
                    <div class="flex-1">
                      <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between">
                        <div>
                          <h3 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-gray-100">
                            {cert.name}
                          </h3>
                          <p
                            class="text-base sm:text-lg"
                            style={`color: ${siteConfig.accentColor}`}
                          >
                            {cert.issuer}
                          </p>
                        </div>
                        {cert.year && (
                          <span class="text-xs sm:text-sm text-gray-500 dark:text-gray-400 mt-1 sm:mt-0">
                            {cert.year}
                          </span>
                        )}
                      </div>
                      {cert.description && (
                        <p class="mt-2 text-sm sm:text-base text-gray-600 dark:text-gray-400">
                          {cert.description}
                        </p>
                      )}
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
